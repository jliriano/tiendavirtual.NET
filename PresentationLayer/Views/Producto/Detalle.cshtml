@model Repository.Modelos.Producto

@{
    ViewBag.Title = Model.nombre;
}

<h2>Detalle del Producto</h2>

<div>
    <table class="table">
        <tr>
            <th width="25%">
            </th>
            <th>
            </th>
            <th width="25%">
            </th>
        </tr>
        <tr>
            <td>
                <img src="~/Content/img/@Model.fotoUri" />
            </td>
            <td>
                <h2>@Model.nombre</h2>
                <h4>@Model.descripcion</h4>
            </td>
            <td>
                <h4>@Model.precio EUR</h4>
                <span>
                    @{ if (@Model.cantidad == 0)
                        {
                            <p class="text-danger"><b>No Disponible</b></p>
                            <input type="number" disabled="disabled" class="input-sm" value="0" min="0" max="0" />
                            <button type="button" disabled="disabled" class="btn btn-default">Agregar al Carrito</button>
                        }
                        else
                        {
                            using (Html.BeginForm("AddCarrito", "Productos", FormMethod.Post))
                            {
                                <input name="productoId" type="hidden" value="@Model.Id" />
                                <p class="text-success"><b>En Stock (@Model.cantidad)</b></p>
                                <input name="productoCant" type="number" class="input-sm" value="1" min="1" max="@Model.cantidad" size="2" />
                                <button type="submit" class="btn btn-primary">Agregar al Carrito</button>
                            }
                        }
                    }
                </span>
            </td>
        </tr>
    </table>

</div>
